<% layout("/layouts/boilerplate") %>
<div class="row mt-3 ">
  <div class="col-8 offset-3 " >
 <body>
  <h3><%= listing.title %>   </h3>
 </div>
  <div class="card col-6 offset-3 show-card listing-card">
   
      <img src = "<%= listing.image %>" class="card-img-top show-img" alt="Lisings_image">
      <div class="card-body">
       <br><br>
        <%= listing.description%> <br><br>
        &#x20b9</b><%= listing.price%> <br><br>
        <%= listing.location%> <br><br>
        <%= listing.country%>


      </p>
      </div>
    </div>
  </div>
  <div class="btns">
   
    <a href="/listings/<%=listing._id%>/edit">Edit</a>
    <br><br>
    <form method="post" action="/listings/<%= listing._id %>?_method=DELETE" onsubmit="return confirmDelete()">
      <button  type="submit" style="background-color: cornsilk; cursor: pointer; border-radius: 5px;">Delete this listing</button>

      
  </form>
  <div class="col-8 offset-3 mt-3" >
    <h4>Leave a review</h4>
    <form  action="/listings/<%= listing._id %>/reviews" method="post" novalidate class="needs-validation">
      <div class="mb-3 mt-3">
        <label for="rating" class="form-label" >Rating</label>
        <input class="form-range" type="range" min="1" max="5" id="review" name="review[rating]">
      </div>

      <div>
        <label for="comment">Comments</label>
        <textarea name="review[Comment]" id="comment" cols="30" rows="10" class="form-control" required></textarea>
        <div class="invalid-feedback">please add some coomments</div>
      </div>
     
      <button class="btn btn-outline-dark mt-3">submit</button>
    </form>
    <hr>
    <p><b>All Reviews</b></p>
    <div class="row">
    
   
      
      <% for(review of listing.reviews ) { %>
       <div class="card col-5 mb-3 ms-3">
        <div class="card-body">
          <h5 class="card-title">Sonu Kumar</h5>
          <p class="card-text"><%= review.Comment %></p>
          <p class="card-text"><%= review.rating %> Stars</p> 
          <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=delete" class="mb-3" method="post">
            <button class=" btn btn-sm btn-dark">Delete</button>
           </form>

        </div>
       </div>
       
     <% } %>
    </div>
   

  </div>
</div>
</div>
<script>
function confirmDelete() {
    return confirm("Are you sure you want to delete this listing?");
}
</script>


